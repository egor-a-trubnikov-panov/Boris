mainColor = #33691e;

@keyframes rotate {
    0% {
        transform: rotate(0deg)
    }
    100% {
        transform: rotate(360deg)
    }

}

spiner-basic() {
    position fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    &__container {
        display: inline-block;
        width: 30px;
        height: 30px;
        position: absolute;
        box-sizing: border-box;
        top: 50%;
        left: 50%;
        margin: -15px 0 0 -15px;
    }

    &__line {
        margin: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        border 2px solid transparent;
        border-bottom-color: mainColor
        box-sizing: border-box;
        animation: rotate linear 1s infinite;
    }
}

spiner-small() {
    &__container {
        width: 30px;
        height: 30px;
        margin: -15px 0 0 -15px;
    }

    &__line {
        border 2px solid transparent;
        border-bottom-color: mainColor
    }
}

spiner-normal() {
    &__container {
        width: 40px;
        height: 40px;
        margin: -20px 0 0 -20px;
    }

    &__line {
        border 3px solid transparent;
        border-bottom-color: mainColor
    }
}

spiner-large() {
    &__container {
        width: 50px;
        height: 50px;
        margin: -25px 0 0 -25px;
    }

    &__line {
        border 4px solid transparent;
        border-bottom-color: mainColor
    }
}

spiner-extra-large() {
    &__container {
        width: 60px;
        height: 60px;
        margin: -30px 0 0 -30px;
    }

    &__line {
        border 5px solid transparent;
        border-bottom-color: mainColor
    }
}



.spiner {
    spiner-basic()
    &_Small {
        spiner-basic()
        spiner-small()
    }
    &_Normal {
        spiner-basic()
        spiner-normal()
    }
    &_Large {
        spiner-basic()
        spiner-large()
    }
    &_ExtraLarge {
        spiner-basic()
        spiner-extra-large()
    }
}

