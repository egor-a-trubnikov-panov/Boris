// генерация тени
box_shadow_generate(param) {
    box-shadow: param, 0 3px 20px rgba(0, 0, 0, .25);
}

// общий стиль кнопок
button-skin-common() {
    position: relative;
    display: inline-block;
    margin: 0 3px;
    height: 31px
    &__control {
        position: relative;
        width: 100%;
        display: inline;
        border: none;
        border-radius: 5px;
        background: #999;
        font-size: 14px;
        color: #fff;
        cursor: pointer;
        outline: none;
        overflow: hidden;
        text-shadow: 0 0 2px #393939;
        box_shadow_generate(0 3px 0 0 #808080)
        margin 0
        padding 5px 10px
        &:hover {
            background: #aaa;
        }
        &:active {
            top: 2px;
            box_shadow_generate(0 1px 0 0 #808080)
        }
    }
    &._focused {
        outline: none;
        &:before {
            content '';
            display inline-block;
            width 100%;
            height 90%;
            top: 3px;
            position absolute;
            border-radius: 5px;
            transition: box-shadow linear 0.2s;
            box-shadow: 0 0 11px rgba(0, 141, 252, 1);
        }
    }
}

// синий цвет
color-blue() {
    &__control {
        background: #589cef;
        box_shadow_generate(0 3px 0 0 rgb(108,143,208))
        &:hover {
            background: #5ca7ff;
        }
        &:active {
            box_shadow_generate(0 1px 0 0 rgb(108,143,208))
        }
    }
}

// красный цвет
color-red() {
    &__control {
        background: #e51c23;
        box_shadow_generate(0 3px 0 0 #b0120a)
        &:hover {
            background: #e84e40;
        }
        &:active {
            box_shadow_generate(0 1px 0 0 #b0120a)
        }
    }
}

// зеленый цвет
color-green() {
    &__control {
        background: #8bc34a;
        box_shadow_generate(0 3px 0 0 #33691e)
        &:hover {
            background: #9ccc65;
        }
        &:active {
            box_shadow_generate(0 1px 0 0 #33691e)
        }
    }
}

// оранжевый цвет
color-orange() {
    &__control {
        background: #ff9800;
        box_shadow_generate(0 3px 0 0 #e65100)
        &:hover {
            background: #ffa726;
        }
        &:active {
            box_shadow_generate(0 1px 0 0 #e65100)
        }
    }
}

// белый цвет
color-white() {
    &__control {
        background: #eeeeee;
        box_shadow_generate(0 3px 0 0 #616161)
        color: #333;
        &:hover {
            background: #f5f5f5;
        }
        &:active {
            box_shadow_generate(0 1px 0 0 #616161)
        }
    }

}
// размеры
size(size) {
    if (size == small) {
        height: 26px
        &__control {
            padding: 3px 8px;
            font-size: 12px;
        }
    }
    if (size == normal) {
        height: 31px
        &__control {
            padding 5px 10px
            font-size: 14px;
        }
    }
    if (size == large) {
        height: 38px
        &__control {
            padding 7px 12px
            font-size: 16px;
        }
    }
    if (size == extraLarge) {
        height: 44px
        &__control {
            padding 9px 14px
            font-size: 18px;
        }
    }
}

// цвета
colors(size) {
    &-blue {
        button-skin-common()
        size(size)
        color-blue()
    }

    &-green {
        button-skin-common()
        size(size)
        color-green()
    }

    &-red {
        button-skin-common()
        size(size)
        color-red()
    }

    &-orange {
        button-skin-common()
        size(size)
        color-orange()
    }

    &-white {
        button-skin-common()
        size(size)
        color-white()
    }
}

.button {
    &_small {
        button-skin-common()
        size(small)
        colors(small)
    }

    &_normal {
        button-skin-common()
        size(normal)
        colors(normal)
    }

    &_large {
        button-skin-common()
        size(large)
        colors(large)
    }

    &_extraLarge {
        button-skin-common()
        size(extraLarge)
        colors(extraLarge)
    }
}
