input_skin_base-mixin($height) {

    position: relative;
    display: inline-block;
    box-sizing: border-box;

    background-color: #fff;
    border: 1px solid #ccc;

    margin 0 3px;

    /* чтобы под бордером не было белого фона */
    background-clip: padding-box;
    vertical-align: baseline;
    line-height: normal;
    cursor: text;

    /* анимация желтой фокусной рамки */
    transition: box-shadow .05s ease-out;
    border-radius: 3px;
    overflow: hidden;
    &._long {
        margin 0;
        width: 100%;
        &__control {
            width: 100%;
        }
    }

    /* <input> */
    &__control {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 13px;

        position: relative;
        display: inline-block;
        box-sizing: border-box;
        margin: 0;
        padding: 0 .6em;
        width: 100%;
        height: $height;
        /* Чтобы не заползал под крестик */
        padding-right: $height;

        border: none;
        vertical-align: baseline;

        &:focus {
            outline: none;
        }

        /*
            @see http://alexbaumgertner.ya.ru/replies.xml?item_no=2112
            @see http://www.cssnewbie.com/input-button-line-height-bug/
        */
        &::-moz-focus-inner {
            padding: 0;
            border: none;
        }

        /* прячем стандартный крестик IE10 */
        &::-ms-clear {
            display: none;
        }
    }

    &._focused {
        transition: border linear 0.2s, box-shadow linear 0.2s;
        border-color: rgba(82, 168, 236, 0.8);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6);
        outline: none;
    }

    &:hover {
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.4);
    }

    &._disabled {
        border-color: transparent !important;
        cursor: default;

        if (ie == 8) {
            background-color: #ebebeb !important;
        } else {
            background-color: rgba(0, 0, 0, 0.08) !important;
        }
    }

    &._disabled &__control {
        user-select: none;
        background-color: inherit;
    }

    &__clear {
        display none;
        position: absolute;
        top: 0;
        right: 0;
        z-index: 2;

        width: $height;
        height: $height;
        vertical-align: middle;
        background: url('img/clear.svg') 50% 50% no-repeat;
        cursor: pointer;
        opacity: (ie != 8) ? 0.3:1;

        &:hover {
            opacity: 1;
        }

        &._visible {
            display: block;
        }

        &._visible {
            display block
        }
    }
}

.input_small {
    input_skin_base-mixin($height = 26px)
}

.input_normal {
    input_skin_base-mixin($height = 30px)
}

.input_large {
    input_skin_base-mixin($height = 34px)
}

.input_extraLarge {
    input_skin_base-mixin($height = 38px)
}
