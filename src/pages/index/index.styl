page-skin-default() {
    margin: 0;
    height: 100%;
    position: relative;
    font-family: Arial, Helvetica, sans-serif
    width: 100%;
    box-shadow: inset 0 0 60vw #666;
    text-align: center;
}

html {
    width: 100%;
    height: 100%;
}

.page {
    page-skin-default()
}

.disable-hover,
.disable-hover * {
    pointer-events: none !important;
}
